{
    "manifest_version": 2,
    "name": "AWS Profile Containers",
    "description": "Open AWS profiles from credentials file in separate containers.",
    "version": "0.5.0",
    "sidebar_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png"
        },
        "default_title": "AWS Profile Containers",
        "default_panel": "popup.html"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": ["js/backgroundPage.js"]
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "contextualIdentities",
        "cookies",
        "storage",
        "tabs",
        "alarms",
        "http://127.0.0.1:10999/*",
        "http://localhost:10999/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "browser_specific_settings": {
        "gecko": {
            "id": "aws-profile-containers@samfakhreddine.dev"
        }
    }
}
