{
    "manifest_version": 2,
    "name": "AWS Profile Containers",
    "description": "Open AWS profiles from credentials file in separate containers.",
    "version": "0.1.0",
    "browser_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "sidebar_action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png"
        },
        "default_title": "AWS Profile Containers",
        "default_panel": "popup.html",
        "open_at_install": false
    },
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            }
        }
    },
    "background": {
        "scripts": [
            "js/backgroundPage.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "contextualIdentities",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:10999/*",
        "http://localhost:10999/*",
        "https://*.amazonaws.com/*",
        "https://*.aws.amazon.com/*"
    ],
    "optional_permissions": [
        "cookies",
        "tabs"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "aws-profile-containers@yourname.local"
        }
    }
}