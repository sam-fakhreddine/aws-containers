{
    "manifest_version": 2,
    "name": "AWS Profile Containers",
    "description": "Open AWS profiles from credentials file in separate containers.",
    "version": "0.1.0",
    "browser_action": {
        "default_icon": "granted-icon.svg",
        "default_popup": "popup.html"
    },
    "sidebar_action": {
        "default_icon": "granted-icon.svg",
        "default_title": "AWS Profile Containers",
        "default_panel": "popup.html",
        "open_at_install": false
    },
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            }
        }
    },
    "background": {
        "scripts": ["js/backgroundPage.js"],
        "persistent": false
    },
    "icons": {
        "16": "granted-icon.svg",
        "48": "granted-icon.svg",
        "128": "granted-icon.svg"
    },
    "permissions": ["contextualIdentities", "cookies", "tabs", "storage", "nativeMessaging"],
    "browser_specific_settings": {
        "gecko": {
            "id": "aws-profile-containers@yourname.local"
        }
    }
}
